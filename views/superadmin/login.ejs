<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Super Admin â€“ Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body{background:#f8f9fa;min-height:100vh;display:flex;align-items:center;justify-content:center}
    .card{max-width:420px;width:100%}
  </style>
</head>
<body>
  <div class="card shadow p-4">
    <h4 class="mb-3 text-center">Super Admin Login</h4>
    <form method="POST" action="/superadmin/login">
      <div class="mb-3">
        <input class="form-control" name="username" placeholder="Username" required>
      </div>
      <div class="mb-3">
        <input class="form-control" name="password" type="password" placeholder="Password" required>
      </div>
      <button class="btn btn-primary w-100">Sign in</button>
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="text-danger mt-3"><%= error %></div>
      <% } %>
    </form>
  </div>
</body>
</html>
