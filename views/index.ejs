      100% {
        background-size: 110%;
      }
    }
    .hero-section h1 {
      font-weight: 700;
      font-size: 3rem;
      text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }
    .hero-section p {
      font-size: 1.2rem;
      max-width: 600px;
      margin: 0 auto;
    }
    .btn-get-started {
      background-color: #25989E;
      border-color: #25989E;
      padding: 12px 30px;
      font-size: 1.1rem;
      font-weight: 600;
      border-radius: 25px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
    .btn-get-started:hover {
      background-color: #1c787d;
      border-color: #1c787d;
      transform: translateY(-2px);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }
    .feature-card {
      transition: transform 0.3s, box-shadow 0.3s;
      border: none;
      border-radius: 15px;
      background-color: #ffffff;
    }
    .feature-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }
    .feature-icon {
      font-size: 2.5rem;
      color: #25989E;
      margin-bottom: 15px;
    }
    .contact-section {
      background-color: #ffffff;
      padding: 60px 0;
    }
    .contact-section .card {
      border-radius: 15px;
      border: none;
    }
    .btn-primary {
      background-color: #25989E;
      border-color: #25989E;
      transition: background-color 0.3s;
    }
    .btn-primary:hover {
      background-color: #1c787d;
      border-color: #1c787d;
    }
    .footer {
      background-color: #3A4F52;
      color: white;
      padding: 30px 0;
      text-align: center;
    }
    .btn-login {
      background-color: #25989E;
      color: white;
      border: none;
      padding: 10px 20px;
      border-radius: 25px;
      transition: background-color 0.3s;
    }
    .btn-login:hover {
      background-color: #1c787d;
    }
    .logo-svg {
      fill: #25989E;
    }
