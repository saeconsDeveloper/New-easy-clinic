  <!-- Features Section -->
  <section id="features" class="py-5">
    <div class="container">
      <h2 class="text-center mb-5 fw-bold">Powerful Features for Your Clinic</h2>
      <div class="row">
        <div class="col-md-3 mb-4">
          <div class="card feature-card shadow-sm text-center">
            <div class="card-body">
              <i class="fas fa-users feature-icon"></i>
              <h5 class="card-title">View & Analyse All Patients</h5>
              <p class="card-text">Access comprehensive patient records securely in one place.</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card feature-card shadow-sm text-center">
            <div class="card-body">
              <i class="fas fa-user-plus feature-icon"></i>
              <h5 class="card-title">Add New Patients</h5>
              <p class="card-text">Effortlessly register new patients with an intuitive interface.</p>
            </div>
          </div>
        </div>
        <div class="col-md-3 mb-4">
          <div class="card feature-card shadow-sm text-center">
            <div class="card-body">
              <i class="fas fa-stethoscope feature-icon"></i>
