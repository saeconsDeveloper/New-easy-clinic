    }
    .nav-link:hover {
      color: #d1e8e2 !important;
    }
    .hero-section {
      position: relative;
      color: white;
      padding: 120px 0;
      text-align: center;
      overflow: hidden;
      min-height: 500px;
      /* background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1576091160550-2173fdabea48?q=80&w=2070&auto=format&fit=crop') no-repeat center center/cover; */
