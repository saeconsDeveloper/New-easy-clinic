<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Digital Med Clinic - Login</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f8f9fa;
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .login-card {
      width: 100%;
      max-width: 400px;
      padding: 2rem;
      background: #fff;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .login-logo {
      display: block;
      margin: 0 auto 1.5rem auto;
      width: 120px;
      height: auto;
    }

    .btn-primary {
      background-color: #25989E;
      border-color: #25989E;
      transition: background-color 0.3s;
      width: 100%;
    }

    .btn-primary:hover {
      background-color: #1c787d;
      border-color: #1c787d;
    }
  </style>
</head>
<body>

  <div class="login-card">
    <!-- Logo -->
     <a href="/">

       <img src="/logo.jpeg" alt="Digital Med Clinic" class="login-logo" />
      </a>

    <!-- Login Form -->
<form id="loginForm" method="POST" action="/login">
  <!-- value comes from server; default to VIEWER -->
  <input type="hidden" name="role" id="role" value="<%= (role || 'VIEWER') %>">

  <div class="mb-3">
    <input type="text" name="clinicCode" class="form-control"
           placeholder="Clinic name or code" required />
  </div>

  <div class="mb-3">
    <input type="password" name="password" class="form-control"
           placeholder="<%= (role || 'VIEWER') === 'ADMIN' ? 'Admin password' : 'Viewer password' %>" required />
  </div>

  <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary">
      Login as <%= (role || 'VIEWER') %>
    </button>
    <!-- Optional toggles -->
    <div class="text-center small mt-2">
      <a href="/login?role=VIEWER">Viewer</a> Â·
      <a href="/login?role=ADMIN">Admin</a>
    </div>
  </div>

  <% if (typeof error !== 'undefined' && error) { %>
    <div class="text-danger mt-3"><%= error %></div>
  <% } %>
</form>



  </div>

</body>
</html>
