$('#saveAddChanges').on('click', async () => {
  $('#saveAddChanges').prop('disabled', true);

  // Check if there are any .diagnosis-row-add elements
  const diagnosisRows = $('.diagnosis-row-add');
  if (diagnosisRows.length === 0) {
    alert('Please add at least one diagnosis row before saving.');
    $('#saveAddChanges').prop('disabled', false); // Re-enable the button
    return; // Stop further execution
  }

  const formData = new FormData();

  // Check for empty date values in diagnosis rows
  let hasEmptyDate = false;
  $('.diagnosis-row-add').each(function(index) {
    const $row = $(this);
    const dateValue = $row.find('.diagnosis-date').val();
    
    // Check if date is empty, null, or undefined
    if (!dateValue || dateValue.trim() === '') {
      hasEmptyDate = true;
      return false; // Break the .each() loop
    }
  });

  // If any date is empty, show alert and stop submission
  if (hasEmptyDate) {
    alert('Please fill in the date for all diagnosis rows before saving.');
    $('#saveAddChanges').prop('disabled', false); // Re-enable the button
    return; // Stop further execution
  }

  // Proceed with populating FormData if validation passes
  $('.diagnosis-row-add').each(function(index) {
    const $row = $(this);
    const files = $row.find('.fileUploadAddDiagnose')[0]?.files || [];

    formData.append(`diagnoses[${index}][date]`, $row.find('.diagnosis-date').val());
    formData.append(`diagnoses[${index}][diagnosis]`, $row.find('.diagnosis-text').val());
    formData.append(`diagnoses[${index}][treatment]`, $row.find('.treatment-text').val());
    formData.append(`diagnoses[${index}][patientId]`, $('#editPatientId').val());

    // Append all files for this diagnosis
    Array.from(files).forEach(file => {
      formData.append(`diagnoses[${index}][files][]`, file);
    });
  });

  try {
    const response = await fetch(`/api/v1/admin/dashboard/add-diagnose`, {
      method: 'POST',
      body: formData // Don't set Content-Type; the browser handles it
    });

    if (!response.ok) throw new Error(`Error: ${response.statusText}`);
    $('#saveAddChanges').prop('disabled', false);
    $('#editModal').modal('hide');
    loadPatients();
  } catch (err) {
    alert(`Failed to update: ${err.message}`);
    $('#saveAddChanges').prop('disabled', false); // Re-enable button on error
  }
});

