$(document).on('change', '.fileUploadAddDiagnose',async function () {
  const files = this.files;
  const $diagnosisBlock = $(this).closest('.diagnosis-row-edit');

  if ((files.length) > 10) {
    alert(`You can upload a maximum of 10 files.`);
    $(this).val(''); // Clear selected files
    return;
  }

  const maxSizeMB = 5;
  const validTypes = ['application/pdf', 'image/jpeg', 'image/png'];
  const validFiles = [];

  for (let i = 0; i < files.length; i++) {
    const file = files[i];

    // Validate file size
    if (file.size > maxSizeMB * 1024 * 1024) {
      alert(`"${file.name}" exceeds the 5 MB size limit.`);
      $(this).val('');
      return;
    }

    // Validate file type
    const mimeType = file.type;
    const ext = file.name.toLowerCase();

    const isValidType = validTypes.includes(mimeType) ||
      ext.endsWith('.pdf') || ext.endsWith('.jpeg') || ext.endsWith('.jpg') || ext.endsWith('.png');

    if (!isValidType) {
      alert(`"${file.name}" is not a valid PDF, JPEG, or PNG file.`);
      $(this).val('');
      return;
    }

    validFiles.push(file);
  }

  const formData = new FormData();

  for (let i = 0; i < validFiles.length; i++) {
  formData.append('files', validFiles[i]); // no square brackets here
}

});

